<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/step_between_contacts"
    android:background="@drawable/frame_rounding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/name_left_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/tv_name_ts" />

    <TextView
        android:id="@+id/tv_career"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/career_left_margin"
        android:layout_marginBottom="@dimen/tv_career_m_bottom"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/tv_career_ts" />
</LinearLayout>